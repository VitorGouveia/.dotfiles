// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Student {
  id        String @id
  name      String
  lastname  String
  email     String @unique
  rg        String @unique
  homeworks Homework[]

  @@map("students")
}

model Homework {
  id          Int @id @default(autoincrement())
  title       String
  subject     String
  description String
  date        DateTime

  studentId      String
  student        Student @relation(fields: [studentId], references: [id])

  @@map("homeworks")
}