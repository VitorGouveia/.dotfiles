datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Aluno {
  id        String @id
  name      String
  lastname  String
  email     String @unique
  rg        String @unique
  homeworks Homework[]

  @@map("alunos")
}

model Homework {
  id          Int @id @default(autoincrement())
  title       String
  subject     String
  description String
  date        DateTime

  userId      String
  user        User @relation(fields: [userId], references: [id])

  @@map("homeworks")
}